{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["es2020"],
    "moduleResolution": "node"
  },
  "include": [
    "./deploy/**/*.ts",
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./api.ts",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "files": [
    "hardhat.config.ts"
  ]
}
